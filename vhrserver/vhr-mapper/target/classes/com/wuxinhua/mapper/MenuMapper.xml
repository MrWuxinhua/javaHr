    <select id="getMenuByHrId" resultMap="MenuBaseResultMap">
        SELECT
            m1.*,
            m2.id id2,
            m2.url url2,
            m2.path path2,
            m2.component component2,
            m2.name name2,
            m2.iconCls iconCls2,
            m2.keepAlive keepAlive2,
            m2.requireAuth requireAuth2,
            m2.parentId parentId2,
            m2.enabled enabled2
        FROM
            menu m1
            LEFT JOIN menu m2 ON m2.parentId = m1.id
            LEFT JOIN menu_role mr ON mr.mid = m2.id
            LEFT JOIN role r ON r.id = mr.rid
            LEFT JOIN hr_role hr ON hr.rid = mr.rid
        WHERE
            hr.hrid = #{hrId}
        ORDER BY m1.id
    </select>
    <select id="getMenuAndRoles" resultMap="MenuAndRoles">

        SELECT
            m.*,
            r.id AS rid,
            r.name AS rname,
            r.nameZh AS rnameZh
        FROM
            menu m
            LEFT JOIN menu_role mr ON m.id = mr.mid
            LEFT JOIN role r ON mr.rid = r.id
        WHERE
            m.url != '/'
        order by m.id , r.id
    </select>
    <select id="getAllMenus" resultMap="menuAndChildren">
        SELECT
            m1.id AS id1,
            m1.NAME AS name1,
            m2.id AS id2,
            m2.NAME AS name2,
            m3.id AS id3,
            m3.NAME AS name3
        FROM
            menu m1
            LEFT JOIN menu m2 ON m1.parentId = m2.id
            LEFT JOIN menu m3 ON m2.parentId = m3.id
        WHERE
            m1.enabled = TRUE
        AND m1.path != '/'
        AND m2.path != '/'
        ORDER BY
            m3.id,
            m2.id,
            m1.id
    </select>
